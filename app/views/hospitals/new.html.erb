<div class="col-lg-6 mx-lg-auto">
  <div class="card shadow">
    <div class="card-header">
      <h2 class="card-title text-center">Create a Hospitals
      </h2>
    </div>
    <div class="car-body px-3">
      <%= form_with model: @hospital do |f| %>
        <% if @hospital.errors.any? %>
          <% @hospital.errors.full_messages.each do |message|%>
            <h3><%= message %></h3>
          <% end %>
        <% end %>
        <div class="form-group">
          <%= f.label :name, class: 'mb-2' %><br>
          <%= f.text_field :name, placeholder: 'Enter the hospital name', class: 'form-control form-control-lg', :required => true %><br>
        </div>
        <div class="form-group">
          <%= f.label :city, class: 'mb-2' %><br>
          <%= f.text_field :city, placeholder: 'Enter the city', class: 'form-control form-control-lg', :required => true %><br>
        </div>
        <div class="form-group">
          <%= f.label :address, class: 'mb-2' %><br>
          <%= f.text_field :address, placeholder: 'Enter the address', class: 'form-control form-control-lg', :required => true %><br>
        </div>
        <%= f.submit 'Create a Hospital', class: 'btn btn-primary btn-lg mb-3' %>
      <%end%>
    </div>
  </div>
</div>

