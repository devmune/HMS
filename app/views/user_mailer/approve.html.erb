<h1>Approve user</h1>
<p><strong>Email:</strong> <%= @user.email %></p>
<%= form_with url: approve_user_path(@user), method: :patch do |form| %>
  <div class="form-group">
    <%= form.label :approved, "Approve user?" %>
    <%= form.check_box :approved %>
  </div>
  <div class="form-group">
    <%= form.submit "Save" %>
  </div>
<% end %>
