
<div class="col-lg-6 mx-lg-auto">
  <div class="card shadow">
    <div class="card-header">
      <h2 class="card-title text-center">Sign Up</h2>
    </div>
    <div class="card-body">
    <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
      <%= render "devise/shared/error_messages", resource: resource %>
      <div class="form-group">
        <%= f.label :name ,class: "mb-2"%>
        <%= f.text_field :name, autofocus: true, autocomplete: "name", class: "form-control form-control-lg" %>
      </div>
      <div class="form-group">
        <%= f.label :email %><br />
        <%= f.email_field :email, autofocus: true, autocomplete: "email",  class: "form-control form-control-lg" %>
      </div>
      <div class="form-group">
        <%= f.label :user_type , class: "mb-2" %>
        <option value="">Select user</option>
        <%= f.select :user_type, ['Admin', 'Patient', 'Doctor'], selected: 'Patient' %>
        <%# <%= f.select :user_type, ['Admin', 'Patient','Doctor']%>
      </div>
      <div class="form-group">
        <%= f.label :password, class: "mb-2" %>
        <% if @minimum_password_length %>
          <em>(<%= @minimum_password_length %> characters minimum)</em>
        <% end %><br />
        <%= f.password_field :password, autocomplete: "new-password", class: "form-control form-control-lg" %>
      </div>
      <div class="form-group">
        <%= f.label :password_confirmation, class: "mb-2" %>
        <%= f.password_field :password_confirmation, autocomplete: "new-password",  class: "form-control form-control-lg"%>
      </div>
      <div class="actions">
        <%= f.submit "Sign up",class: "btn btn-primary btn-lg mt-2" %>
      </div>
    <% end %>
    <%= render "devise/shared/links" %>
    </div>
  </div>
</div>
